<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:clickable="false"
    android:background="@color/White">
    <ImageView
        android:id="@+id/player_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginRight="@dimen/space_small"
        android:src="@drawable/ic_face_black_24_1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@id/contact_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_image" />
    <EditText
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/contact_birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/contact_call"
        app:layout_constraintTop_toBottomOf="@id/contact_name"/>
    <ImageView
        android:id="@+id/contact_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_small"
        android:src="@drawable/ic_call_black_24dp"
        app:layout_goneMarginRight="0dp"
        app:layout_constraintBottom_toTopOf="@id/contact_birthday"
        app:layout_constraintTop_toBottomOf="@id/contact_name"
        app:layout_constraintLeft_toRightOf="@+id/contact_number"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/contact_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@id/contact_delet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_number" />
    <ImageView
        android:id="@+id/contact_delet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginRight="@dimen/space_small"
        android:src="@drawable/ic_delete_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/contact_edit"
        app:layout_constraintTop_toBottomOf="@id/contact_birthday" />
    <ImageView
        android:id="@+id/contact_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginRight="@dimen/space_small"
        android:src="@drawable/ic_edit_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/contact_delet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_birthday" />
</android.support.constraint.ConstraintLayout>